<main class="contenedor">
    <form action="/editar-perfil" method="post" class="default-form">
        <div class="campo">
            <label for="">Nombre</label>
            <input value="{{usuario.nombre}}" type="text" name="nombre" placeholder="Tu Nombre" required id="">
        </div>
        <div class="campo">
            <label for="">Email</label>
            <input value="{{usuario.email}}" type="email" name="email" placeholder="Tu E-mail" required id="">
        </div>
        <div class="campo">
            <label for="">Password</label>
            <input type="password" name="password" placeholder="Tu Password"  id="">
        </div>
        <div class="campo">
            <input type="submit" class="btn btn-azul"value="Guardar Cambios">
        </div>
    </form>
</main>