<main class="lista-candidatos">
    <h2>Lista de candidatos</h2>
    {{#if candidatos.length}}
        {{#each candidatos}}
            <div class="candidato">
                <div class="caja">
                    <p class="etiqueta">Nombre:</p>
                    <p class="nombre">{{nombre}}</p>
                </div>
                <div class="caja">
                    <p class="etiqueta">E-mail:</p>
                    <p class="nombre">{{email}}</p>
                </div>
                <div class="caja">
                    <a href="/upkiads/cv/{{cv}}" class="btn btn-verde">
                        Ver CV
                    </a>
                </div>
            </div>
        {{/each}}

    {{else}}
        <p>No hayh candidatos aun</p>
    {{/if}}
</main>